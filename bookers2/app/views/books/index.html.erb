<div class="container  mt-3 ">
    <% if @book.errors.any? %>
      <div class="text-danger">
        <% if @book.errors.count > 1 %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <% else %>
          <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <% end %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row d-flex justify-content-around">

      <%= render 'users/userinfo',user: @user, book: @book %>

      <div class="col-md-8">
          <h2>Books</h2>
          <table class="table ">
            <thead>
              <tr>
              <th colspan="1"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
              <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <a href="/users/<%= book.user.id %>">
                      <%= image_tag book.user.get_profile_image("50x50") %>
                    </a>
                  </td>
                  <td scope="row"><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
</div>