<div class="container  mt-5 ">
    <div class="row d-flex justify-content-around">
      <div class="col-md-3">

        <h2>User info</h2>

        <%= image_tag  @user.get_profile_image("100x100") %>

        <div class=" d-flex justify-content-between pt-3 border-top">
          <p class="ml-2"><strong>name</strong></p>
          <p class="mr-4"><strong><%= @user.name %></strong></p>
        </div>

        <div class="pt-3 border-top">
          <p class="ml-2 pb-3"><strong>introduction</strong></p>
        </div>
        <a class="btn btn-outline-secondary btn-block" href="/users/<%= current_user.id %>/edit" ><i class="fas fa-user-cog"></i></a>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book,url: '/books',method: :post,local: true do |f| %>

          <p>Title</p>
          <%= f.text_field :title %>

          <p class="mt-2">Opinion</p>
          <%= f.text_area :body %>

          <%= f.submit "Create Book", class: "btn btn-success mt-2" %>

        <% end %>

      </div>

      <div class="col-md-8">
        <h2>Books</h2>
       <table class="table ">
        <thead>
          <tr></tr>
            <th colspan="1"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>

              <td><%= image_tag book.user.get_profile_image("50x50") %></td>
              <td scope="row"><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
      </div>
   </div>


</div>