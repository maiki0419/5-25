<div class="container  mt-3 ">
  <div class="row d-flex justify-content-around">
    <%= render 'users/userinfo',user: @user, book: @book %>

    <div class="col-md-8">
          <h2>Book detail</h2>
          <table class="table ">
            <tbody>
                <tr>
                  <td>
                    <a href="/users/<%= @book.user.id %>">
                      <%= image_tag @book.user.get_profile_image("50x50") %><br>
                      <%= @book.user.name%>
                    </a>
                  </td>
                  <td scope="row"><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                  <% if @book.user.id ==current_user.id %>
                    <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                    <td><%= link_to "Destroy","/books/#{@book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-danger" %></td>
                  <% end %>
                </tr>
            </tbody>
          </table>
  </div>
</div>
