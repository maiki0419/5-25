<div class="container  mt-3 ">
    <div class="row d-flex justify-content-around">
      <%= render 'userinfo',user: @user, book: @book %>
     <div class="col-md-8">
        <h2>Books</h2>
        <table class="table ">
          <thead>
            <tr>
            <th colspan="1"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <a href="/users/<%= current_user.id %>">
                    <%= image_tag book.user.get_profile_image("50x50") %>
                  </a>
                </td>
                <td scope="row"><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
