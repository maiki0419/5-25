<div class="container mt-3">
  <div class="row">
    <div class=" mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <div class="text-danger">
          <% if @user.errors.count > 1 %>
          <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user,local: true do |f| %>

        <p>name</p>
        <%= f.text_field :name, style: "width: 500px" %>

        <p class="mt-4">Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>


        <p class="mt-4">Introduction</p>
        <%= f.text_area :introduction, style: "width: 500px" %>

        <%= f.submit "Update User", class: "btn btn-secondary d-block mt-2 mb-3 " %>

      <% end %>

    </div>
  </div>
</div>